<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/m230"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/m15">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/m200"
        android:layout_margin="2dp"
        android:elevation="@dimen/m10"
        app:cardCornerRadius="@dimen/m10"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m140"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m5">

                <io.RentEasy.views.RegularTextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:text="10,000 per month"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <io.RentEasy.views.RegularTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rate"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:text="2 BHK Flat  BHK Flat  BHK Flat  BHK Flat  BHK Flat"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/m18"
                    android:layout_height="@dimen/m18"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_empty_heart"
                    android:backgroundTint="@color/primary_text_color"
                    android:contentDescription="@string/app_name" />


            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>