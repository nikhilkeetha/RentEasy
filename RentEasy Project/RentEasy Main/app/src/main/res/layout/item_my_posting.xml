<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:padding="5dp"/>

                    <ImageView
                        android:src="@drawable/frame2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <io.RentEasy.views.MediumTextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:maxLines="1"
                        android:text="10,000 per month"
                        android:textColor="@color/secondary_black"
                        android:textSize="15sp" />

                    <io.RentEasy.views.RegularTextView
                        android:id="@+id/tv_description"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:maxLines="3"
                        android:text="2 BHK Flat  BHK Flat  BHK Flat  BHK Flat  BHK Flat"
                        android:textColor="@color/black_3"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/iv_location"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_outline_location_on_24"
                            android:backgroundTint="@color/primary_text_color" />

                        <io.RentEasy.views.RegularTextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:text="Kukatpally, Hyderabad"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/iv_location"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/iv_views"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@color/primary_text_color"
                            android:background="@drawable/ic_views"/>

                        <io.RentEasy.views.RegularTextView
                            android:id="@+id/tv_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:text="Views : 0"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/iv_views"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@color/primary_text_color"
                            android:background="@drawable/ic_phone"/>

                        <io.RentEasy.views.RegularTextView
                            android:id="@+id/tv_calll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/iv_call"
                            />

                        <ImageView
                            android:id="@+id/iv_whatsapp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_calll"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/primary_text_color"
                            android:background="@drawable/ic_whatsapp"/>

                        <io.RentEasy.views.RegularTextView
                            android:id="@+id/tv_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/iv_whatsapp"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/editLay"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/ripple_border_curve">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_edit_info"
                        android:backgroundTint="@color/secondary_black"
                        android:contentDescription="@string/app_name" />

                    <io.RentEasy.views.MediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:text="Edit"
                        android:textColor="@color/secondary_black"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#C8C8C8" />

                <LinearLayout
                    android:id="@+id/deleteLay"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ripple_border_curve">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_baseline_delete_24"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="@string/app_name" />

                    <io.RentEasy.views.MediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:text="Delete"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/edit_lay">




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edit_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m30"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_bg_black"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="18dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_edit_info"
                            android:backgroundTint="@color/primary_text_color"
                            android:contentDescription="@string/app_name" />

                        <io.RentEasy.views.MediumTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:maxLines="1"
                            android:text="Edit"
                            android:textColor="@color/primary_text_color"
                            android:textSize="14sp" />


                    </LinearLayout>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/call_lay">

                    <io.RentEasy.views.MediumTextView
                        android:id="@+id/tv_category_myposting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Photography â€¢ Cameras"
                        android:textColor="@color/primary_text_color"
                        android:textSize="14sp" />

                    <io.RentEasy.views.RegularTextView
                        android:id="@+id/tv_address_myposting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_category_myposting"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Address"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"/>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_statistics"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toLeftOf="@id/delete_lay"
                    android:layout_centerVertical="true"
                    android:background="@drawable/trend"
                    android:backgroundTint="@color/primary_text_color"
                    android:layout_marginRight="10dp"/>

                <RelativeLayout
                    android:id="@+id/delete_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/m30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ripple_effect"
                        >

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:backgroundTint="@color/colorPrimary"
                            android:contentDescription="@string/app_name"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"/>

                        <io.RentEasy.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:text="Call Owner"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_14"
                            android:visibility="gone"/>


                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>