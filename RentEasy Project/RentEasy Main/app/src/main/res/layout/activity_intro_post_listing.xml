<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IntroPostListingActivity"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/continue_btn"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/secondary_black"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <io.RentEasy.views.MediumTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivClose"
                android:text="Post/Upload an Ad"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />

            <io.RentEasy.views.RegularTextView
                android:id="@+id/tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you are an owner of house, shop, bike, car and function hall/banquet hall then you can upload an ad for free."
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tv_title"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black_3"
                android:textSize="18sp"/>

            <io.RentEasy.views.MediumTextView
                android:id="@+id/tv_title_how"
                android:layout_below="@id/tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How it works"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:backgroundTint="#3F51B5"
                android:layout_below="@+id/tv_title_how"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <RelativeLayout
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/form"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/iv">

                        <io.RentEasy.views.MediumTextView
                            android:id="@+id/textTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. Upload for Free."
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <io.RentEasy.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textTv"
                            android:layout_marginTop="5dp"
                            android:text="Fill the basic details with just 5 simple steps and upload for free."
                            android:textColor="#E4E4E4"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:backgroundTint="#009688"
                android:layout_below="@+id/cv1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <RelativeLayout
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/phone"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/iv2">

                        <io.RentEasy.views.MediumTextView
                            android:id="@+id/textTv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/how_2"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <io.RentEasy.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textTv2"
                            android:layout_marginTop="5dp"
                            android:text="After you upload an ad users will start noticing it and they will call/message you."
                            android:textColor="#E4E4E4"
                            android:textSize="14sp" />

                    </RelativeLayout>




                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:backgroundTint="#393636"
                android:layout_below="@+id/cv2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <RelativeLayout
                        android:id="@+id/iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/network"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/iv3">

                        <io.RentEasy.views.MediumTextView
                            android:id="@+id/textTv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Connect with renters."
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <io.RentEasy.views.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textTv3"
                            android:layout_marginTop="5dp"
                            android:text="You can connect with people from the call you get and you can rent your properties."
                            android:textColor="#E4E4E4"
                            android:textSize="14sp" />

                    </RelativeLayout>




                </RelativeLayout>

            </LinearLayout>

            <io.RentEasy.views.MediumTextView
                android:id="@+id/tv_title_video"
                android:layout_below="@id/cv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Tutorials"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>



            <ImageView
                android:id="@+id/iv_video_english"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tv_title_video"
                android:background="@drawable/tutorial_thumbnail"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/telugu_vid"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/iv_video_english"
                android:background="@drawable/one"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>


            <io.RentEasy.views.MediumTextView
                android:id="@+id/tv_title_testnomials"
                android:layout_below="@id/telugu_vid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What Owners say"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/test_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_title_testnomials">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/testnomial_slider"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:sliderAnimationDuration="400"
                    app:sliderAutoCycleDirection="right"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="400"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/grey"
                    app:sliderIndicatorUnselectedColor="@color/white"
                    app:sliderScrollTimeInSec="2"
                    app:sliderStartAutoCycle="true"
                    android:layout_marginTop="10dp"/>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <io.RentEasy.views.MediumTextView
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple_3"/>

</RelativeLayout>