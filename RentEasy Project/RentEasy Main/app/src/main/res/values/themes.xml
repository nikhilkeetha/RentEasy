<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.RentEasy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/white</item>
        <item name="bg_variant_thick">@color/white</item>
        <item name="text_color">@color/secondary_black</item>
        <item name="text_color2">@color/primary_text_color</item>
        <item name="t_c_3">@color/secondary_text_color</item>
    </style>

    <style name="switchTheme">
        <item name="android:colorControlActivated">@android:color/holo_green_dark</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <style name="DialoAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>